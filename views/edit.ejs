<% let name;
let message;
 let displayName=name ? name.slice(0, -4) : '' ; let displayMessage=message || '' ;
 %>

    <form method="post" action="/create">
        <label for="name">Name : </label>
        <input type="text" id="name" value='<%= displayName %>' name="name" required readonly>
        <label for="message">Message : </label>
        <textarea id="message" name="message" required />
        <%=displayMessage %></textarea>
            <div id="option">
                <input type="submit" value="Submit" class="buttons">
                <a class="buttons" href="../files">Cancle</a>
            </div>
    </form>

    <style>
        textarea {
            width: 100%;
            height: 200px;
            padding: 10px;
            background-repeat: 10px;
            background: rgb(40, 40, 40);
            border: none;
            border-radius: 1rem;
            color: white;
            padding: 1rem;
            flex: auto;
        }

        input {
            background: rgb(40, 40, 40);
            border: none;
            border-radius: 1rem;
            color: white;
            padding: 1rem 1rem;

            &:focus {
                background: rgb(40, 40, 40);
                outline: none;
            }
        }


        .buttons {
            background: rgb(40, 40, 40);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 100px;
            cursor: pointer;
            transition: background 0.3s ease;
            flex: auto;
            text-align: center;
            text-decoration: none;
            font-size: 1rem;

            &:hover {
                background: purple;
            }
        }

        form {
            padding: 1rem;
            border-radius: 1rem;
            display: flex;
            flex-direction: column;
            height: 100%;
            gap: 10px;
            background: rgb(22, 22, 22);
            color: white;
        }

        #option {
            display: flex;
            gap: 10px;
        }

        #name {
            cursor: default;
        }
    </style>